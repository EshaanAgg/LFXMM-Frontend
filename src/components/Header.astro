---
interface Props {
  title: string;
}
const { title } = Astro.props;

const navItems = [
{
		path: '/',
		label: 'Home',
	},
  	{
		path: '/org',
		label: 'Organizations',
	},
  {
		path: '/organization/PastProjectCard',
		label: 'Projects',
	},
	{
		path: '/team',
		label: 'Team',
	},
];
---

<div
  class="backdrop-blur-md sticky top-0 flex flex-col lg:flex-row justify-between items-center px-10 mb-10 border-solid border-b-2 border-highlight-blue hover:shadow-highlight-blue hover:shadow-lg duration-200 z-10"
>
  <div class="px-10 py-5">
    <div>
      <span
        class="self-center text-5xl font-semibold whitespace-nowrap text-white"
      >
        <a
          href="https://lfx.linuxfoundation.org/tools/mentorship/"
          class="line1 animTypewriter font-header flex items-center text-center hover:text-highlight-blue duration-200"
          title="LFX website"
          target="_blank"
        >
          LFX Mentorship
        </a>
      </span>
    </div>
  </div>
        <nav class="linkUl text-2xl text-white mb-5 sm:mb-0 px-10 py-2 h-36 sm:h-20 sm:py-8">
      {
        navItems.map((item) => {
          return <a class=" animSlowOpacity slowOpacityDelay3 font-subHeader hover:text-blue duration-200 hover:text-3xl" href = {item.path}>{item.label}</a>;
        })
      }
      </nav>

  <div
    class="text-2xl text-white mb-5 sm:mb-0 px-10 py-2 h-36 sm:h-20 sm:py-8 flex"
  >
    <ul
      class="linkUl flex flex-col sm:flex-row sm:justify-between items-center gap-2 sm:gap-20 lg:gap-8 xl:gap-16"
    >
      <li>
        <a
          href="/"
          class="animSlowOpacity font-subHeader hover:text-dark-blue duration-200 hover:text-3xl"
        >
          Home</a
        >
      </li>
      <li>
        <a
          href="https://google.com/"
          class="animSlowOpacity slowOpacityDelay1 font-subHeader hover:text-dark-blue duration-200 hover:text-3xl"
          >Organizations</a
        >
      </li>
      <li>
        <a
          href="https://google.com/"
          class="animSlowOpacity slowOpacityDelay2 font-subHeader hover:text-dark-blue duration-200 hover:text-3xl"
          >Projects</a
        >
      </li>
      <li>
        <a
          href="/team"
          class="animSlowOpacity slowOpacityDelay3 font-subHeader hover:text-dark-blue duration-200 hover:text-3xl"
          >Team</a
        >
      </li>
    </ul>
  </div>
</div>

<style>
  .line1 {
    border-right: 10px solid #0077cc;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
  }
  .animTypewriter {
    animation:
      typewriter 1s steps(14) 1s 1 normal both,
      blinkTextCursor 600ms steps(14) infinite normal;
  }
  @keyframes typewriter {
    from {
      width: 0;
    }
    to {
      width: 9.1em;
    }
  }
  @keyframes blinkTextCursor {
    from {
      border-right-color: #0077cce7;
    }
    to {
      border-right-color: transparent;
    }
  }

  /* Link hover */
  .linkUl a {
    position: relative;
    cursor: pointer;
    transition: 0.5s;
  }

  .linkUl a:before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background: #9cd6ff;
    z-index: -1;
    transform: scaleY(0);
    transition: transform 0.5s;
    transform-origin: bottom;
    border-radius: 0 0 10px 10px;
  }

  .linkUl a:hover:before {
    transform: scaleY(1);
    transition: transform 0.5s;
    transform-origin: top;
  }

  .linkUl a:after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #5fb7ff;
    z-index: -2;
    transform: scaleY(0);
    transition: transform 0.5s;
    transform-origin: bottom;
    filter: blur(40px);
  }

  .linkUl a:hover:after {
    transform: scaleY(1);
    transition: transform 0.5s;
    transform-origin: top;
  }

  .animSlowOpacity {
    animation-name: slowOpacity;
    animation-duration: 0.8s;
    animation-timing-function: cubic-bezier(0.95, 0.05, 0.795, 0.035);
  }

  .slowOpacityDelay1 {
    animation-duration: 1.6s;
  }

  .slowOpacityDelay2 {
    animation-duration: 2.4s;
  }

  .slowOpacityDelay3 {
    animation-duration: 3.2s;
  }

  @keyframes slowOpacity {
    from {
      opacity: 0%;
    }
    to {
      opacity: 100%;
    }
  }
  nav {
    display: flex;
    gap: 2rem;
    height: max-content;
  }

</style>
