<style>
  .open {
    transform: translateX(0);
  }
  .hidden {
    transform: translateY(0);
  }
  .linkUl {
    position: relative;
    cursor: pointer;
    transition: 0.5s;
  }

  .linkUl:before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background: #9cd6ff;
    z-index: -1;
    transform: scaleY(0);
    transition: transform 0.5s;
    transform-origin: bottom;
    /* border-radius: 0 0 0 10px; */
  }

  .linkUl:hover:before {
    transform: scaleY(1);
    transition: transform 0.5s;
    transform-origin: top;
  }

  .linkUl:after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #5fb7ff;
    z-index: -2;
    transform: scaleY(0);
    transition: transform 0.5s;
    transform-origin: bottom;
    filter: blur(5px);
  }

  .linkUl:hover:after {
    transform: scaleY(1);
    transition: transform 0.5s;
    transform-origin: top;
  }
  .animSlowOpacity {
    animation-name: slowOpacity;
    animation-duration: 0.8s;
    animation-timing-function: cubic-bezier(0.95, 0.05, 0.795, 0.035);
  }
  @keyframes slowOpacity {
    from {
      opacity: 0%;
    }
    to {
      opacity: 100%;
    }
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const showNavigationButton = document.querySelector(
      '[data-drawer-show="drawer-navigation"]',
    );
    const hideNavigationButton = document.querySelector(
      '[data-drawer-hide="drawer-navigation"]',
    );
    const navigationDrawer = document.getElementById("drawer-navigation");

    const dropdownButtons = document.querySelectorAll(".dropdown-button");
    const dropdownMenus = document.querySelectorAll(".dropdown-menu");

    if (showNavigationButton && hideNavigationButton && navigationDrawer) {
      showNavigationButton.addEventListener("click", () => {
        // Toggle the visibility of the drawer by adding/removing the "open" class
        navigationDrawer.classList.toggle("open");
      });

      hideNavigationButton.addEventListener("click", () => {
        // Toggle the visibility of the drawer by adding/removing the "open" class
        navigationDrawer.classList.toggle("open");
      });
    }

    // Add event listener to each dropdown button
    dropdownButtons.forEach((button, index) => {
      button.addEventListener("click", () => {
        // Toggle the visibility of the associated dropdown menu
        dropdownMenus[index].classList.toggle("hidden");
        console.log("toggled");
      });
    });
  });
</script>
